      "Calib-Spec": "wold_r",
      "HQ-only": "wold_r",
      "Calib-Self": "wold_r"
    },
    "test_size": 0.2,      
    "random_state": 42,    
    "manual_split": {
      "enabled": true,
      "train_samples": [],
